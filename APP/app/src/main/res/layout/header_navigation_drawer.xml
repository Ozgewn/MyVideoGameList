<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="24dp"
    android:id="@+id/header_profile">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iVImagenPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tVNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        tools:text="Nombre de usuario"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/iVImagenPerfil"
        app:layout_constraintLeft_toRightOf="@id/iVImagenPerfil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:text="Perfil"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/iVImagenPerfil"
        app:layout_constraintLeft_toRightOf="@id/iVImagenPerfil"/>

</androidx.constraintlayout.widget.ConstraintLayout>