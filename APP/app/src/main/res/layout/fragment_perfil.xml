<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.PerfilFragment">

    <ProgressBar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/pBIndeterminada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iVImagenPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/rectangle"
        android:src="@drawable/ic_people"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tVNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iVImagenPerfil"
        app:layout_constraintLeft_toRightOf="@id/iVImagenPerfil"
        app:layout_constraintTop_toTopOf="@id/iVImagenPerfil"
        tools:text="juanito" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/lightBlack"
        android:text="Editar Perfil"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iVImagenPerfil"
        app:layout_constraintLeft_toLeftOf="@id/tVNombreUsuario" />

    <TextView
        android:id="@+id/tVEstadisticasVideojuegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="EstadÃ­sticas Videojuegos"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iVImagenPerfil" />

    <TextView
        android:id="@+id/tVVideojuegosJugandoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tVEstadisticasVideojuegos"
        app:layout_constraintTop_toBottomOf="@id/tVEstadisticasVideojuegos"
        tools:text="1" />

    <TextView
        android:id="@+id/tVVideojuegosJugandoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugando"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosJugandoValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugandoValue" />

    <TextView
        android:id="@+id/tVVideojuegosJugadosValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosJugandoTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosJugadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugados"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosJugadosValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <TextView
        android:id="@+id/tVVideojuegosEnPausaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosJugadosTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosEnPausaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En Pausa"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosEnPausaValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <TextView
        android:id="@+id/tVVideojuegosPlaneadosValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosEnPausaTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosPlaneadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planeados"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosPlaneadosValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <TextView
        android:id="@+id/tVVideojuegosDropeadosValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosPlaneadosTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosDropeadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dropeados"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosDropeadosValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <Button
        android:id="@+id/btnVerLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lightBlack"
        android:text="Ver lista"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosDropeadosTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>