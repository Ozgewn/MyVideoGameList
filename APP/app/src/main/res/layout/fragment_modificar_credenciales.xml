<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.ModificarCredencialesFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:text="¿Qué desea cambiar?"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/tVCambiarNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="?android:attr/textColorPrimary"
        android:text="Nombre de usuario"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/tVCambiarEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="?android:attr/textColorPrimary"
        android:text="Correo electrónico"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/tVCambiarPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="?android:attr/textColorPrimary"
        android:text="Contraseña"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tVBorrarCuenta"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/red"
            android:gravity="center_vertical"
            android:text="Eliminar cuenta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>