<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iVImagenPerfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_people"/>

    <TextView
        android:id="@+id/tVNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iVImagenPerfil"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="juanito"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tVVideojuegosJugandoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tVNombreUsuario"
        app:layout_constraintTop_toBottomOf="@id/tVNombreUsuario"
        tools:text="1" />

    <TextView
        android:id="@+id/tVVideojuegosJugandoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugando"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosJugandoValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugandoValue" />

    <TextView
        android:id="@+id/tVVideojuegosJugadosValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosJugandoTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosJugadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugados"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosJugadosValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <TextView
        android:id="@+id/tVVideojuegosEnPausaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosJugadosTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosEnPausaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En Pausa"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosEnPausaValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <TextView
        android:id="@+id/tVVideojuegosPlaneadosValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tVVideojuegosEnPausaTitle"
        app:layout_constraintTop_toTopOf="@id/tVVideojuegosJugandoValue"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosPlaneadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planeados"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosPlaneadosValue"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugadosValue" />

    <TextView
        android:id="@+id/tVVideojuegosDropeadosValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosJugandoTitle"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosJugandoTitle"
        tools:text="2" />

    <TextView
        android:id="@+id/tVVideojuegosDropeadosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dropeados"
        app:layout_constraintTop_toBottomOf="@id/tVVideojuegosDropeadosValue"
        app:layout_constraintLeft_toLeftOf="@id/tVVideojuegosDropeadosValue"/>

</androidx.constraintlayout.widget.ConstraintLayout>